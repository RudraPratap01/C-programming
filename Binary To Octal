#include<stdio.h>
int convertbinarytoDecimal(int n){
    int decimal=0,place=1;
    while(n!=0){
        int rem = n%10;
        decimal+=rem*place;
        place=place*2;
        n/=10;
    }
    return decimal;
}
int main(){
    int num;
    printf("Enter a binary number: ");
    scanf("%d", &num); 
    
    int octal = 0, place = 1;
    int decimal = convertbinarytoDecimal(num);
    
    while(decimal!=0){
        int rem = decimal % 8;
        octal += rem * place;
        decimal /= 8;
        place *= 10;
    }
    printf("octal = %d", octal);
    return 0;
}
