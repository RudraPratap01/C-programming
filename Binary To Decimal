#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>
int main(){
    int num;
    printf("Enter Binary Number: ");
    scanf("%d", &num);
    int decNum=0, base=1;
    while(num!=0){
        int rem=num%10;
        decNum+=rem*base;
        base*=2;
        num/=10;
    }
    printf("Decimal = %d", decNum);
    return 0;
}
